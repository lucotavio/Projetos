<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                                http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    
    <persistence-unit name="teste-config-modulePU">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>br.com.siemens.configmodule.entidade.Usuario</class>
        <class>br.com.siemens.configmodule.entidade.Banco</class>
        <class>br.com.siemens.configmodule.entidade.TipoBanco</class>
        <class>br.com.siemens.configmodule.entidade.Autorizacao</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>    
    </persistence-unit>   
</persistence>